{
  "name": "trainingtrackerappv2",
  "version": "2.0.0",
  "description": "shared training application for brazilian jiu jitsu",
  "main": "server.js",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.8.7"
  },
  "devDependencies": {
    "concurrently": "^5.0.2",
    "nodemon": "^2.0.2"
  },
  "scripts": {
    "start": "if-env NODE_ENV='production' && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon server.js --ignore 'client/*'\" \"npm run client\" ",
    "install": "cd client && npm install",
    "client": "cd client && npm run start",
    "build": "cd client && npm run build"
  },
  "author": "Michael-Paul Cuccia, Full-Stack Web Developer",
  "license": "ISC"
}
